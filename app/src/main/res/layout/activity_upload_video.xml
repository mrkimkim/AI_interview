<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    tools:context="portfolio.projects.mrkimkim.ai_interview.A_Main"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/icon_uploading"
        app:civ_border_color="#50b7ff"
        app:civ_border_width="15dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="5"
        app:civ_shadow_color="#000000"
        app:layout_constraintTop_toTopOf="@id/upload_video_horizon_guide0"
        app:layout_constraintBottom_toBottomOf="@id/upload_video_horizon_guide1"
        app:layout_constraintStart_toStartOf="@id/upload_video_vertical_guide0"
        app:layout_constraintEnd_toEndOf="@id/upload_video_vertical_guide1"
       />

    <ProgressBar
        android:id="@+id/show_interview_video_seekbar"
        android:layout_width="0dp"
        android:layout_height="10dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:max="1000"
        android:progressDrawable="@drawable/blueprogress"
        app:layout_constraintBottom_toBottomOf="@id/upload_video_horizon_guide2"
        app:layout_constraintStart_toStartOf="@id/upload_video_vertical_guide0"
        app:layout_constraintEnd_toEndOf="@id/upload_video_vertical_guide1"/>


    <TextView
        android:id="@+id/upload_video_tv_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="서버에 연결 중이에요"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/upload_video_horizon_guide3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <android.support.constraint.Guideline
        android:id="@+id/upload_video_horizon_guide0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"
        />

    <android.support.constraint.Guideline
        android:id="@+id/upload_video_horizon_guide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65"
        />

    <android.support.constraint.Guideline
        android:id="@+id/upload_video_horizon_guide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"
        />

    <android.support.constraint.Guideline
        android:id="@+id/upload_video_horizon_guide3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85"
        />

    <android.support.constraint.Guideline
        android:id="@+id/upload_video_vertical_guide0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15"
        />

    <android.support.constraint.Guideline
        android:id="@+id/upload_video_vertical_guide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85"
        />

</android.support.constraint.ConstraintLayout>